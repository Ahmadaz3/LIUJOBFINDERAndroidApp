<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessEditDeleteJob">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font2"
            android:text="Work place type:"
            android:textColor="#004b8e"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/updateWorkPlaceType"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_margin="10dp"
            android:entries="@array/spinner_JWorkPlace" />

    </LinearLayout>

    <EditText
        android:id="@+id/updateJobReq"
        android:layout_width="327dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittexts"
        android:backgroundTint="#BAB5B5"
        android:ems="10"
        android:hint="Job Requierments"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="#004b8e"
        android:textColorHint="#004b8e"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateJobDescription" />

    <EditText
        android:id="@+id/updateJobLocation"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:background="@drawable/edittexts"
        android:backgroundTint="#BAB5B5"
        android:ems="10"
        android:hint="Job Location"
        android:inputType="textPersonName"
        android:padding="7dp"
        android:textColor="#004b8e"
        android:textColorHint="#004b8e"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateJname" />

    <EditText
        android:id="@+id/updateJobDescription"
        android:layout_width="327dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittexts"
        android:backgroundTint="#BAB5B5"
        android:ems="10"
        android:hint="Job Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="#004b8e"
        android:textColorHint="#004b8e"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateJobLocation" />

    <EditText
        android:id="@+id/updateJname"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittexts"
        android:backgroundTint="#BAB5B5"
        android:ems="10"
        android:hint="Job Name"
        android:inputType="textPersonName"
        android:padding="7dp"
        android:textColor="#004b8e"
        android:textColorHint="#004b8e"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backarrow" />

    <Button
        android:id="@+id/updatePostBtn"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/submitbutton"
        android:text="Update"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <Button
        android:id="@+id/DeletePostbtn"
        android:layout_width="99dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/submitbutton"
        android:text="Delete"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toEndOf="@+id/updatePostBtn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="402dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateJobReq">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font2"
            android:text="Job Type:"
            android:textColor="#004b8e"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/updateJobType"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="10dp"
            android:entries="@array/spinner_JType" />

    </LinearLayout>

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>